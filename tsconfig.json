{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020", 
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "verbatimModuleSyntax": false,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
